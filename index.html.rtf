        import \{ initializeApp \} from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";\
        import \{ getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged \} from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";\
        import \{ getFirestore, doc, setDoc, getDoc, setLogLevel \} from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";\
\
        // IMPORTANT: Log level set to Debug for easier development.\
        setLogLevel('Debug');\
\
        // --- GLOBAL SETUP ---\
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-farewell-app-id';\
        const firebaseConfig = JSON.parse(typeof __firebase_config !== 'undefined' ? __firebase_config : '\{\}');\
        const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;\
\
        let app, db, auth, userId = null;\
        let cardData = \{\
            message: '',\
            is_customized: false\
        \};\
        let saveTimeout = null;\
        const SAVE_DELAY = 1500; // 1.5 seconds debounce\
\
        // Path structure confirmed as valid (collection/document/...)\
        const FAREWELL_COLLECTION_PATH = (uid) => `artifacts/$\{appId\}/users/$\{uid\}/farewell_messages`;\
        const MY_CARD_ID = 'my_card_message'; // Document ID\
\
        // --- DOM Elements ---\
        const myCard = document.getElementById('myCard');\
        const overlay = document.getElementById('interactive-card-overlay');\
        const messageInput = document.getElementById('farewell-message-input');\
        const messageBox = document.getElementById('message-box');\
        // Removed customizedIndicator element\
        const myCardName = document.getElementById('myCardName');\
        const myCardIcon = document.getElementById('myCardIcon');\
        const saveStatusIndicator = document.getElementById('save-status-indicator');\
