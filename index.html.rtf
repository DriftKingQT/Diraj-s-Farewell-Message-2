\
        // --- UTILITY FUNCTIONS ---\
\
        /** Shows temporary message box for feedback. */\
        function showMessage(text, isError = false) \{\
            messageBox.textContent = text;\
            messageBox.className = `fixed bottom-4 right-4 p-4 rounded-lg shadow-xl text-white transition-opacity duration-300 opacity-100 z-50 $\{isError ? 'bg-red-600' : 'bg-green-600'\}`;\
            setTimeout(() => \{\
                messageBox.classList.remove('opacity-100');\
                messageBox.classList.add('opacity-0');\
            \}, 3000);\
        \}\
\
        /** Updates the visual state of the card. */\
        function updateCardUI() \{\
            if (cardData.is_customized) \{\
                // Customized (Message Written): Card is now GREEN (same as group)\
                myCardName.textContent = 'DIRAJ'; \
\
                myCard.classList.remove('card-red'); \
                myCard.classList.add('customized-card'); // Customized-card uses GREEN styles\
                \
                myCardIcon.classList.remove('icon-red');\
                myCardIcon.classList.add('icon-green');\
            \} else \{\
                // Not Customized (Default/Empty): Card is now RED (the custom state)\
                myCard.classList.remove('customized-card');\
                myCard.classList.add('card-red');\
                \
                myCardName.textContent = 'DIRAJ'; \
                \
                myCardIcon.classList.remove('icon-green');\
                myCardIcon.classList.add('icon-red');\
            \}\
        \}\
\
\
        // --- FIREBASE/DATA FUNCTIONS ---\
\
        /** Loads data from Firestore */\
        async function loadCardData() \{\
            if (!db || !userId) \{\
                console.error("Firestore not initialized or user not authenticated.");\
                return;\
            \}\
\
            try \{\
                // Use the corrected path to get the document reference\
                const docRef = doc(db, FAREWELL_COLLECTION_PATH(userId), MY_CARD_ID);\
                const docSnap = await getDoc(docRef);\
\
                if (docSnap.exists()) \{\
                    const loadedData = docSnap.data();\
                    cardData.message = loadedData.message || '';\
                    cardData.is_customized = loadedData.is_customized || false;\
                    \
                    // If a message exists, force the customized flag to true.\
                    if (cardData.message.length > 0) \{\
                        cardData.is_customized = true;\
                    \}\
                    \
                    console.log("Card data loaded successfully:", cardData);\
\
                    updateCardUI();\
                    messageInput.value = cardData.message;\
\
                \} else \{\
                    console.log("No existing card data found for this user. Using defaults.");\
                    cardData.message = '';\
                    cardData.is_customized = false;\
                    updateCardUI();\
                \}\
            \} catch (error) \{\
                console.error("Error loading card data from Firestore:", error);\
                showMessage("Error loading previous message.", true);\
            \}\
        \}\
\
        /** Saves data to Firestore (Auto-Save logic) */\
        async function saveCardData(message) \{\
            if (!db || !userId) \{\
                console.error("Firestore not initialized or user not authenticated.");\
                saveStatusIndicator.textContent = "Error: Not connected.";\
                saveStatusIndicator.classList.add('text-red-500');\
                return false;\
            \}\
\
            // If message is cleared, save is_customized as false\
            if (message.length === 0) \{\
                 cardData.is_customized = false;\
                 updateCardUI();\
                 return true; // Successful clear\
            \}\
\
            saveStatusIndicator.textContent = "Saving...";\
            saveStatusIndicator.classList.remove('text-gray-500', 'text-green-500');\
            saveStatusIndicator.classList.add('text-yellow-500');\
\
\
            try \{\
                cardData.message = message;\
                cardData.is_customized = true;\
\
                // Use the corrected path to set the document\
                const docRef = doc(db, FAREWELL_COLLECTION_PATH(userId), MY_CARD_ID);\
\
                // Use setDoc with merge: true to create or update the document\
                await setDoc(docRef, cardData, \{ merge: true \});\
\
                console.log("Card data saved successfully:", cardData);\
                saveStatusIndicator.textContent = "Saved to Board";\
                saveStatusIndicator.classList.remove('text-yellow-500');\
                saveStatusIndicator.classList.add('text-green-500');\
                updateCardUI(); // Reflect the color change\
                return true;\
\
            \} catch (error) \{\
                console.error("Error saving card data to Firestore:", error);\
                saveStatusIndicator.textContent = "Error saving!";\
                saveStatusIndicator.classList.remove('text-yellow-500');\
                saveStatusIndicator.classList.add('text-red-500');\
                // Revert customized flag if saving failed (only if message was cleared)\
                if (cardData.message.length === 0) cardData.is_customized = false;\
                return false;\
            \}\
        \}\
\
        /** Debounce logic for auto-saving */\
        function autoSaveMessage() \{\
            if (saveTimeout) \{\
                clearTimeout(saveTimeout);\
            \}\
\
            const currentMessage = messageInput.value.trim();\
\
            if (currentMessage.length > 0) \{\
                saveStatusIndicator.textContent = "Typing...";\
                saveStatusIndicator.classList.remove('text-green-500', 'text-red-500');\
                saveStatusIndicator.classList.add('text-gray-500');\
            \} else \{\
                 saveStatusIndicator.textContent = "Message cleared.";\
                 saveStatusIndicator.classList.remove('text-green-500', 'text-red-500');\
                 saveStatusIndicator.classList.add('text-gray-500');\
            \}\
\
            saveTimeout = setTimeout(async () => \{\
                await saveCardData(currentMessage);\
            \}, SAVE_DELAY);\
        \}\
        \
\
\
        /** Initializes Firebase and sets up Auth */\
        async function initializeFirebase() \{\
            if (Object.keys(firebaseConfig).length === 0) \{\
                showMessage("Firebase config is missing. App will not save data persistently.", true);\
                return;\
            \}\
            try \{\
                app = initializeApp(firebaseConfig);\
                db = getFirestore(app);\
                auth = getAuth(app);\
\
                // Wait for the authentication state to be resolved\
                await new Promise((resolve) => \{\
                    const unsubscribe = onAuthStateChanged(auth, async (user) => \{\
                        if (user) \{\
                            userId = user.uid;\
                        \} else if (initialAuthToken) \{\
                            try \{\
                                const cred = await signInWithCustomToken(auth, initialAuthToken);\
                                userId = cred.user.uid;\
                            \} catch (e) \{\
                                console.warn("Custom token sign-in failed. Signing in anonymously.", e);\
                                const anonCred = await signInAnonymously(auth);\
                                userId = anonCred.user.uid;\
                            \}\
                        \} else \{\
                            const anonCred = await signInAnonymously(auth);\
                            userId = anonCred.user.uid;\
                        \}\
\
                        if (userId) \{\
                            console.log("Authentication successful. User ID:", userId);\
                            // Load data once auth is ready\
                            await loadCardData();\
                        \}\
                        unsubscribe();\
                        resolve();\
                    \});\
                \});\
\
                // Attach auto-save listener after initialization\
                if (messageInput) \{\
                    messageInput.addEventListener('input', autoSaveMessage);\
                    // Set initial status\
                    saveStatusIndicator.textContent = cardData.message.length > 0 ? "Loaded from Board" : "Ready to type";\
                    saveStatusIndicator.classList.add('text-gray-500');\
                \}\
\
            \} catch (error) \{\
                console.error("Error initializing Firebase or during authentication:", error);\
                showMessage("Critical: Firebase initialization failed.", true);\
            \}\
        \}\
        \
        // --- INTERACTION HANDLERS ---\
\
        /** Shows the interactive card view */\
        window.showCard = function() \{\
            if (!db) \{\
                showMessage("Please wait for the app to initialize.", true);\
